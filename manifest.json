{
    "name": "PokeTranslate",
    "description": "Translates Pokemon-related Japanese words to English",
    "version": "3.0",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "notifications",
        "background"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "PokeTranslate"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "manifest_version": 2
}
